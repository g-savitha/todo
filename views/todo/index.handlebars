{{#each todo}}
<div class="container">
    <div class="card card-body mb-2">
        <h3>{{date}}</h3>
        <hr>
        <h4>{{title}}</h4>
        <p>{{details}}</p>
        <a href ="/todo/edit/{{id}}" class="btn btn-outline-warning mb-2">Edit</a>
        <form method="post" action="/todo/{{id}}?_method=DELETE">
         <input type="hidden" name="_method" value="DELETE">
         <input type="submit" value="Delete" class="btn btn-outline-danger btn-block"></input>
        </form>
    </div>
</div>
{{else}}
<p>No items are added</p>
{{/each}}